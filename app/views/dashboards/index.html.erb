<style>
body {
  font-family: 'Helvetica Neue', sans-serif;
  margin: 20px;
  background-color: #f5f5f5;
}

h1.page-title {
  font-size: 2rem;
  margin-bottom: 1rem;
  color: #333;
}

  .dashboard-card {
    padding: 20px;
    background-color: #008bff26;
    text-align: center;
    border-radius: 10px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    transition: background-color 0.3s ease;
  }

  .dashboard-card:hover {
    background-color: #008bff40; 
  }

  .dashboard-link {
    flex: 1;
    text-decoration: none;
    color: inherit;
  }

  .dashboard-row {
    display: flex;
    gap: 20px;
    margin-top: 20px;
    padding-right: 70px;
    padding-left: 70px;
  }
  .action-bar {
    margin-bottom: 1.5rem;
    display: flex;
    justify-content: end;
    padding-right: 75px;
    gap: 10px;
  }

  .btn-primary {
    background-color: #007bff;
    color: white;
    padding: 10px 16px;
    border-radius: 4px;
    text-decoration: none;
    font-weight: bold;
    transition: background-color 0.2s ease;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }
</style>

<h1 style="margin-top: 65px; margin-bottom: 100px; justify-self: center;">Dashboard</h1>

<div class="action-bar">
    <%= link_to "New Transaction", new_transaction_path, class: "btn-primary" %>
    <%= link_to "New Customer", new_customer_path, class: "btn-primary", style: "background-color: #18c345" %>
</div>

<div class="dashboard-row">
  <a href="<%= transactions_path %>" class="dashboard-link">
    <div class="dashboard-card">
      <h2>Total Transactions</h2>
      <p style="font-size: 24px; font-weight: bold;"><%= @transactions %></p>
    </div>
  </a>
  <a href="<%= customers_path %>" class="dashboard-link">
    <div class="dashboard-card">
      <h2>Total Customers</h2>
      <p style="font-size: 24px; font-weight: bold;"><%= @customers %></p>
    </div>
  </a>
</div>

<div class="dashboard-row">
  <a href="<%= root_path %>" class="dashboard-link">
    <div class="dashboard-card">
      <h2>Customers Today Credit</h2>
      <p style="font-size: 24px; font-weight: bold;"><%= @credit_amount_today %> Rs</p>
    </div>
  </a>
  <a href="<%= root_path %>" class="dashboard-link">
    <div class="dashboard-card">
      <h2>Customers Today Debit</h2>
      <p style="font-size: 24px; font-weight: bold;"><%= @debit_amount_today %> Rs</p>
    </div>
  </a>
</div>

<div class="dashboard-row">
  <a href="<%= root_path %>" class="dashboard-link">
    <div class="dashboard-card">
      <h2>Customers Total Credit</h2>
      <p style="font-size: 24px; font-weight: bold;"><%= @credit_amount %> Rs</p>
    </div>
  </a>
  <a href="<%= root_path %>" class="dashboard-link">
    <div class="dashboard-card">
      <h2>Customers Total Debit</h2>
      <p style="font-size: 24px; font-weight: bold;"><%= @debit_amount %> Rs</p>
    </div>
  </a>
</div>
