<style>
  body {
    font-family: 'Helvetica Neue', sans-serif;
    margin: 20px;
    background-color: #f5f5f5;
  }

  h1.page-title {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: #333;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    background-color: #fff;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    margin-top: 20px;
  }

  table th, table td {
    padding: 12px 15px;
    text-align: left;
    border-bottom: 1px solid #ddd;
  }

  table th {
    background-color: #f0f0f0;
    color: #333;
    font-weight: bold;
  }

  table tr:hover {
    background-color: #f9f9f9;
  }

  .action-bar {
    margin-bottom: 1.5rem;
  }

  .btn-primary {
    background-color: #007bff;
    color: white;
    padding: 10px 16px;
    border-radius: 4px;
    text-decoration: none;
    font-weight: bold;
    transition: background-color 0.2s ease;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }
  
  .btn-secondary {
    background-color: #6c757d;
    color: white;
    padding: 10px 16px;
    border-radius: 4px;
    text-decoration: none;
    font-weight: bold;
    transition: background-color 0.2s ease;
    border: none;
    cursor: pointer;
  }

  .btn-secondary:hover {
    background-color: #5a6268;
  }

  .filter-form {
    display: flex;
    gap: 1rem;
    align-items: flex-end;
    flex-wrap: wrap;
    padding: 15px;
    justify-content: end;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-select, .form-input {
    padding: 8px 12px;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-size: 1rem;
    background-color: #fff;
  }

  .form-select:focus, .form-input:focus {
    outline: none;
    border-color: #007bff;
    box-shadow: 0 0 3px rgba(0, 123, 255, 0.5);
  }
</style>

<h1>Customers</h1>
<div class="action-bar">
    <%= link_to "New Customer", new_customer_path, class: "btn-primary" %>
  </div>

  <div class="action-bar">
  <%= form_with url: customers_path, method: :get, local: true, html: { class: "filter-form" } do |f| %>
    <div class="form-group">
      <label>Customer:</label>
      <%= f.select :customer_id, options_from_collection_for_select(@customers, :id, :name, params[:customer_id]), { include_blank: 'All' }, class: "form-select" %>
    </div>

    <div>
      <%= f.submit 'Filter', class: 'btn-primary' %>
    </div>

    <div style="margin-bottom: 7px;">
      <%= link_to 'Reset', customers_path, class: 'btn-secondary' %>
    </div>
  <% end %>
</div>

<div>
<% total_debit = 0 %>
<% total_credit = 0 %>
  <table>
    <tr>
      <th>Name</th>
      <th>Phone No</th>
      <th>Cnic</th>                                   
    </tr>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.name, customer, style: "text-decoration: none;" %></td>
        <td><%= customer.phone_no %></td>
        <td><%= customer.cnic %></td>
      </tr>
    <% end %>
    </table>
    </div>
    


